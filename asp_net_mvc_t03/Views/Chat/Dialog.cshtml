@model asp_net_mvc_t03.Models.Message
@{
    ViewBag.Title = "Users Dialog";
    Layout = "_Layout";
}
<div class="infoHead">
    <h6>
        Dialog:
        <span class="text-secondary">@Model.Author.Email</span>
        and
        <span class="text-secondary">@Model.ToUser.Email</span>
        <hr/>
        Theme:
        <span class="text-secondary">@Model.Head</span>
    </h6>
</div>
<div class="container">
    <h3 class=" text-center">
    </h3>
    <div class="messaging">
        <div class="inbox_msg">
            <div class="inbox_people">
                <div class="headind_srch">
                    <div class="recent_heading">
                        <h4>Recent</h4>
                    </div>
                </div>
                <div class="inbox_chat">
                </div>
            </div>
            <div class="mesgs">
                <div class="msg_history">
                </div>
                <div class="type_msg">
                    <div class="input_msg_write">
                        <input type="hidden" name="messageId" id="messageId" value="@Model.Id"/>
                        @{
                            var curUser = User.Identity?.Name;
                            var toUser = "";
                            if (curUser == Model.Author.Email && Model.ToUser.Email != curUser)
                            {
                                toUser = Model.ToUser.Email;
                            }
                            if (curUser != Model.Author.Email && Model.ToUser.Email == curUser)
                            {
                                toUser = Model.Author.Email;
                            }
                        }
                        <input type="hidden" required name="toUser" id="toUser" value="@toUser"/>
                        <input type="hidden" required name="head" id="head" value="@Model.Head"/>
                        <input type="text" minlength="1" maxlength="1000" class="write_msg" name="body" id="body" placeholder="Type a message"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>