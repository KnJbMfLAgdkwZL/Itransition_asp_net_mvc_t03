@model asp_net_mvc_t03.DTO.Frontend.FromForm.RegisterForm

@{
    ViewBag.Title = "Registration";
    Layout = "_Layout";
}


<div id="formWrapper">
    <form asp-action="Register" asp-controller="Account" id="registerForm" asp-anti-forgery="true">

        <div class="row mb-4">
            <div class="col">
                <h2>Registration</h2>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
            </div>
        </div>

        <!-- Email input -->
        <div class="form-outline mb-4">
            <input type="email" id="form1Example1" class="form-control" asp-for="Email" required placeholder="user@example.com"/>
            <label asp-for="Email" class="form-label" for="form1Example1">Email address</label>
            <span asp-validation-for="Email"></span>
        </div>

        <!-- Password input -->
        <div class="form-outline mb-4">
            <input type="password" id="form1Example2" class="form-control" asp-for="Password" required/>
            <label asp-for="Password" class="form-label" for="form1Example2">Password</label>
            <span asp-validation-for="Password"></span>
        </div>

        <!-- ConfirmPassword input -->
        <div class="form-outline mb-4">
            <input type="password" id="form1Example3" class="form-control" asp-for="ConfirmPassword" required/>
            <label asp-for="ConfirmPassword" class="form-label" for="form1Example3">Confirm Password</label>
            <span asp-validation-for="ConfirmPassword"></span>
        </div>

        <!-- Name input -->
        <div class="form-outline mb-4">
            <input type="text" id="form1Example4" class="form-control" asp-for="Name" required/>
            <label asp-for="Name" class="form-label" for="form1Example4">Name</label>
            <span asp-validation-for="Name"></span>
        </div>

        <div class="row mb-4">
            <div class="col">
                <button type="submit" class="btn btn-primary btn-block">Registrate</button>
            </div>
        </div>
    </form>
</div>

<style>
    #formWrapper {
        text-align: center;
    }
    
    #registerForm {
        width: 300px;
        text-align: left;
        display: inline-block;
    }
</style>