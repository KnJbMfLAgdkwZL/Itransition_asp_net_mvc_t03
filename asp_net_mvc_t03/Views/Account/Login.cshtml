@model asp_net_mvc_t03.DTO.Frontend.Forms.LoginForm

@{
    ViewBag.Title = "Login";
    Layout = "_Layout";
}

<h2>Login</h2>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Email">Enter Email</label><br/>
            <input type="email" required placeholder="user@example.com" asp-for="Email"/>
            <span asp-validation-for="Email"/>
        </div>
        <div>
            <label asp-for="Password">Enter password</label><br/>
            <input required asp-for="Password"/>
            <span asp-validation-for="Password"/>
        </div>

        <br/>
        <div>
            <input type="submit" value="Submit" class="btn btn-outline-dark"/>
        </div>
        <br/>
        
        <a asp-action="Register" asp-controller="Account">Registration</a>

    </div>
</form>