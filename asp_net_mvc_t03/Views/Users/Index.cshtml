@model System.Collections.Generic.List<asp_net_mvc_t03.Models.User>

@{
    ViewBag.Title = "Users";
    Layout = "_Layout";
}

<h2>Users</h2>

<div>
    <button class="btn btn-outline-success toolbarButtons" action="Unblock">ğŸ”“ Unblock</button>
    <button class="btn btn-outline-secondary toolbarButtons" action="Block">ğŸ”’ Block</button>
    <button class="btn btn-outline-danger toolbarButtons" action="Delete">ğŸ—‘ï¸ Delete</button>
</div>

<br/>

<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>
            <input class="form-check-input" id="selectAll" type="checkbox"/> All
        </th>
        <th scope="col">Id</th>
        <th scope="col">Email</th>
        <th scope="col">Name</th>
        <th scope="col">Status</th>
        <th scope="col">Registration Date</th>
        <th scope="col">Last Login Date</th>
    </tr>
    </thead>
    
    <tbody>
    @foreach (var user in @Model)
    {
        <tr>
            <td>
                <input class="form-check-input selected" type="checkbox" userId="@user.Id"/>
            </td>
            <td>@user.Id</td>
            <td>@user.Email</td>
            <td>@user.Name</td>
            <td>@user.Status</td>
            <td>@user.RegistrationDate</td>
            <td>@user.LastLoginDate</td>
        </tr>
    }
    </tbody>
</table>


<style>
    .toolbarButtons {
        width: 150px;
        padding: 5px;
        margin-right: 10px;
    }
</style>


<script>
function SetUsersCheckBox(val = true) {
    let items = document.getElementsByClassName('selected')
    for (let item of items) {
        item.checked = val
    }
}

selectAll.onclick = function () {
    if (this.checked) {
        SetUsersCheckBox(true)
    } else {
        SetUsersCheckBox(false)
    }
}

function GetSelectedUsers() {
    let usersId = []
    let items = document.getElementsByClassName('selected')
    for (let item of items) {
        if (item.checked) {
            usersId.push(item.getAttribute("userId"))
        }
    }
    return usersId
}

for (let button of document.getElementsByClassName('toolbarButtons')) {
    button.onclick = function () {
        let action = this.getAttribute("action")
        let usersId = GetSelectedUsers()
        fetch("/Users/ToolButtonClick", {
            method: "POST", headers: {'Content-Type': 'application/json'}, body: JSON.stringify({
                action: action,
                usersId: usersId
            })
        }).then(res => {
            location.reload()
        })
    }
}
</script>