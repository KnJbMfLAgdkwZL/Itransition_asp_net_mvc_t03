@model System.Collections.Generic.List<asp_net_mvc_t03.Models.User>

@{
    ViewBag.Title = "Users";
    Layout = "_Layout";
}

<h2>Users</h2>

<div>
    <button class="toolbarButtons" action="Block">🔒 Block</button>
    <button class="toolbarButtons" action="Unblock">🔓 Unblock</button>
    <button class="toolbarButtons" action="Delete">🗑️ Delete</button>
</div>

<br/>

<table>
    <tr>
        <th>
            <input id="selectAll" type="checkbox"/> All
        </th>
        <th>Id</th>
        <th>Email</th>
        <th>Name</th>
        <th>Status</th>
        <th>Registration Date</th>
        <th>Last Login Date</th>
    </tr>

    @foreach (var user in @Model)
    {
        <tr>
            <td>
                <input class="selected" type="checkbox" userId="@user.Id"/>
            </td>
            <td>@user.Id</td>
            <td>@user.Email</td>
            <td>@user.Name</td>
            <td>@user.Status</td>
            <td>@user.RegistrationDate</td>
            <td>@user.LastLoginDate</td>
        </tr>
    }

</table>

<style>
    table {
        border: 1px solid #a4a4a4;
        width: 100%;
    }
    td, th {
        border: 1px solid #a4a4a4;
        padding: 12px;
        text-align: left;
    }
    .toolbarButtons{
    width: 150px;
    padding: 5px;
    margin-right: 10px;
    }
</style>


<script>
function SetUsersCheckBox(val = true) {
    let items = document.getElementsByClassName('selected')
    for (let item of items) {
        item.checked = val
    }
}

selectAll.onclick = function () {
    if (this.checked) {
        SetUsersCheckBox(true)
    } else {
        SetUsersCheckBox(false)
    }
}

function GetSelectedUsers() {
    let usersId = []
    let items = document.getElementsByClassName('selected')
    for (let item of items) {
        if (item.checked) {
            usersId.push(item.getAttribute("userId"))
        }
    }
    return usersId
}

for (let button of document.getElementsByClassName('toolbarButtons')) {
    button.onclick = function () {
        let action = this.getAttribute("action")
        let usersId = GetSelectedUsers()
        fetch("/Users/ToolButtonClick", {
            method: "POST", headers: {'Content-Type': 'application/json'}, body: JSON.stringify({
                action: action,
                usersId: usersId
            })
        }).then(res => {
            location.reload()
        })
    }
}
</script>